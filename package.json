{
  "name": "ashenhall",
  "version": "0.1.0",
  "description": "時間を選ばない戦略カードゲーム。いつでも対戦申請、あとは待つだけ。",
  "private": true,
  "packageManager": "pnpm@10.15.0",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "gen:animations": "node ./scripts/gen-animations.cjs",
    "prebuild": "pnpm run gen:animations",
    "predev": "pnpm run gen:animations",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:quick": "QUICK_TEST=1 jest",
    "test:simulation": "FULL_SIMULATION=1 jest src/__tests__/ai-battle-simulator.test.ts",
    "test:simulation:quick": "QUICK_TEST=1 jest src/__tests__/ai-battle-simulator.test.ts",
    "metrics:baseline": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' -r tsconfig-paths/register ./scripts/generate-metrics-baseline.ts",
    "metrics:check": "ts-node --compiler-options '{\"module\":\"CommonJS\"}' -r tsconfig-paths/register ./scripts/check-metrics-drift.ts"
  },
  "dependencies": {
    "html-to-image": "^1.11.13",
    "lucide-react": "^0.539.0",
    "next": "15.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hot-toast": "^2.6.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@jest/globals": "^30.0.5",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "ts-node": "^10",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "eslint-plugin-complexity": "^1.0.2",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5"
  }
}
